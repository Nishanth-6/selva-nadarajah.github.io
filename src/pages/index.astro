---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderNav from "../components/HeaderNav.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
import Card from "../components/Card.astro";
import { Image } from "astro:assets";
import profile from "../assets/profile.jpg";
---

<BaseLayout title="Selva Nadarajah" description="Academic homepage.">
  <HeaderNav slot="header" />

  <div class="hero">
    <div>
      <h1>Selva Nadarajah</h1>
      <p class="subtitle">Associate Professor (placeholder title)</p>
      <p class="meta">
        <span>University (placeholder)</span>
        <span class="sep">Â·</span>
        <a href="mailto:replace@university.edu">replace@university.edu</a>
      </p>
    </div>

    <div class="photo">
      <Image src={profile} alt="Portrait of Selva Nadarajah" width={320} />
    </div>
  </div>

  <Section title="About">
    <p>
      Replace this with the Home page copy from the existing site, rewritten into 1 to 3 short paragraphs.
    </p>
  </Section>

  <Section title="Research areas">
    <div class="grid">
      <Card title="Self-adapting approximations">
        <p>Replace with 1 to 2 sentences from the existing site.</p>
      </Card>
      <Card title="Energy real options">
        <p>Replace with 1 to 2 sentences from the existing site.</p>
      </Card>
      <Card title="Energy and computing nexus">
        <p>Replace with 1 to 2 sentences from the existing site.</p>
      </Card>
    </div>
  </Section>

  <Section title="Awards and recognition">
    <ul>
      <li>Replace with award entries from the current site (year + award name).</li>
    </ul>
  </Section>

  <Footer slot="footer" />
</BaseLayout>

<style>
.hero {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5rem;
  align-items: center;
  margin-top: 1rem;
}
.subtitle {
  margin-top: 0.25rem;
  font-size: 1.05rem;
  color: var(--muted);
}
.meta {
  color: var(--muted);
}
.sep { margin: 0 0.35rem; }
.photo :global(img) {
  border-radius: 16px;
  border: 1px solid var(--border);
}
.grid {
  display: grid;
  grid-template-columns: repeat(1, minmax(0, 1fr));
  gap: 1rem;
}
@media (min-width: 900px) {
  .hero {
    grid-template-columns: 1.2fr 0.8fr;
  }
  .grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
}
</style>
